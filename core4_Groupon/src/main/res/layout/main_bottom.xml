<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:orientation="vertical"
    android:background="@drawable/bottom_button_bg">

    <RadioGroup
        android:id="@+id/main_bottom_RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <RadioButton
            android:id="@+id/main_bottom_RadioButton_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:button="@null"
            android:drawableTop="@drawable/main_bottom_btn_1"
            android:gravity="center"
            android:text="首页"
            android:textSize="15sp"
            android:textColor="@drawable/main_bottom_textview"
            android:minHeight="0dp"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/main_bottom_RadioButton_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:button="@null"
            android:drawableTop="@drawable/main_bottom_btn_2"
            android:gravity="center"
            android:text="闪惠团购"
            android:textSize="15sp"
            android:textColor="@drawable/main_bottom_textview"
            />

        <RadioButton
            android:id="@+id/main_bottom_RadioButton_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/main_bottom_btn_3"
            android:gravity="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="发现"
            android:textColor="@drawable/main_bottom_textview"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/main_bottom_RadioButton_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/main_bottom_btn_4"
            android:gravity="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="我的"
            android:textColor="@drawable/main_bottom_textview"
            android:textSize="15sp" />

    </RadioGroup>
</LinearLayout>