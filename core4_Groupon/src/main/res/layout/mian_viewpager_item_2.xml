<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mian_viewPager_item_2_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_home_shoppingmall"
            android:gravity="center"
            android:padding="11dp"
            android:text="购物" />

        <TextView
            android:id="@+id/mian_viewPager_item_2_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="足疗按摩"
            android:drawableTop="@mipmap/ic_home_footer"
            android:gravity="center"
            android:padding="11dp"/>

        <TextView
            android:id="@+id/mian_viewPager_item_2_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="美发"
            android:drawableTop="@mipmap/meifa"
            android:gravity="center"
            android:padding="11dp"/>

        <TextView
            android:id="@+id/mian_viewPager_item_2_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="综合商场"
            android:drawableTop="@mipmap/ic_home_bangdan_green"
            android:gravity="center"
            android:padding="11dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mian_viewPager_item_2_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_home_baby"
            android:gravity="center"
            android:padding="11dp"
            android:text="亲子" />

        <TextView
            android:id="@+id/mian_viewPager_item_2_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_home_sport"
            android:gravity="center"
            android:padding="11dp"
            android:text="运动健身" />

        <TextView
            android:id="@+id/mian_viewPager_item_2_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/meijia"
            android:gravity="center"
            android:padding="11dp"
            android:text="美甲美睫" />

        <TextView
            android:id="@+id/mian_viewPager_item_2_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_home_imarry"
            android:gravity="center"
            android:padding="11dp"
            android:text="结婚/摄影" />

    </LinearLayout>


</LinearLayout>